<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_heavier</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SummonerTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_heavy</item>
    </style>


    <style name="drawer_linear">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="drawer_linear.child" parent="drawer_linear">
        <item name="android:layout_marginLeft">@dimen/margin_left</item>

    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="loginbutton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">@dimen/eight_dp</item>
        <item name="android:paddingRight">@dimen/eight_dp</item>
        <item name="android:textSize">@dimen/sixteen_dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="usertextview">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">@dimen/eight_dp</item>
    </style>
    <style name="summoner_textbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">@string/n_a</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="summoner_linear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>

    </style>
</resources>
