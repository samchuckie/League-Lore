<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/sixteen_dp"
    android:paddingRight="@dimen/sixteen_dp"
    android:paddingTop="@dimen/sixteen_dp"
    android:paddingBottom="@dimen/eight_dp"
    tools:background="@color/black_background_text">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:background="@drawable/e"
            android:id="@+id/ability_icon"
            android:contentDescription="@string/abilitie_icon" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/eight_dp"
            android:paddingStart="@dimen/eight_dp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Q: Worlds end"
                android:id="@+id/abilityname_tv"
                android:layout_marginBottom="@dimen/eight_dp"
                android:textColor="@color/light_grey"
                apps:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Aatrox slams down hs sword"
                android:id="@+id/abilitydesc_tv"
                android:textColor="@color/light_grey"
                apps:fontFamily="serif"
                />

        </LinearLayout>
    </LinearLayout>