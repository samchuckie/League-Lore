<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".SummonerActivity"
        android:background="@color/black_background_text"

    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summoner_frame"
        android:visibility="invisible"
        tools:visibility="visible"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="250dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/champions"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginStart="@dimen/eight_dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/championsplayed_rv"
            tools:listitem="@layout/champions_played">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:id="@+id/rankedsolo_linear"
            android:visibility="gone"
            tools:visibility="visible"


            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:background="@drawable/unranked"
                android:contentDescription="@string/ranked_solo_emblem"
                android:id="@+id/soloranked_iv"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/sixteen_dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/n_a"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:id="@+id/soloranked_tv"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:text="@string/n_a"
                    android:textColor="@android:color/white"
                    android:id="@+id/solorankedpoint_tv"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/n_a"
                    android:textColor="@color/white"
                    android:id="@+id/leaguepointssolo_tv"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:id="@+id/rankedflex_linear"
            android:visibility="gone"
            tools:visibility="visible"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:background="@drawable/unranked"
                android:id="@+id/flexranked_iv"
                android:contentDescription="@string/ranked_solo_emblem"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/sixteen_dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/n_a"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:textColor="@color/white"
                    android:id="@+id/flexranked_tv"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/n_a"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/flexrankedpoints_tv"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:text="@string/n_a"
                    android:textColor="@color/white"
                    android:id="@+id/leaguepointsflex_tv"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:id="@+id/unranked"
            android:visibility="gone"
            tools:visibility="visible"


            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/unranked"
                android:contentDescription="@string/ranked_solo_emblem"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/sixteen_dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/n_a"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:text="@string/n_a"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/n_a"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

         <include layout="@layout/header_file">

         </include>
        </FrameLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/summoner_progress"
            tools:visibility="invisible"
            />
    </FrameLayout>
</ScrollView>
