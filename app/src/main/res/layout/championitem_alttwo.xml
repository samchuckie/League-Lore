<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="@dimen/eight_dp"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tool:background="@drawable/a"
            android:contentDescription="@string/champion_view_desciption"
            android:scaleType="centerCrop"
            android:id="@+id/champion_background_iv"
            />
        <TextView
            android:id="@+id/champion_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:fontFamily="@font/oxygen_light"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_sixteen"
            tool:text="Aatrox"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:textColor="@android:color/black"
            android:id="@+id/champion_title_tv"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
            tool:text ="Champion"
            android:fontFamily="@font/oxygen_light"
            android:layout_marginStart="@dimen/eight_dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="Aatrox is a legendary warrior, one of only five that remain of"
            android:textSize="@dimen/textsize_sixteen"
            android:fontFamily="@font/oxygen_light"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginRight="@dimen/eight_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/champion_blurb_tv"
            />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/alistar"
            app:civ_border_width="4dp"
            app:civ_border_color="#FF000000"
            android:id="@+id/champion_iv"
            tool:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/champion_name_tvs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/oxygen_light"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_sixteen"
            tool:text="Aatrox" />
    </LinearLayout>

</android.support.v7.widget.CardView>